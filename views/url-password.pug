extends base

block content
    .main
        if url.message
            h1 Message
            h2.u-margin-bottom-big.url__message= url.message
        if url.password
            form#form-url-pass.form.form-center(data-shorted=`${url.target}`)
                h3.u-margin-bottom-small There is a password associated with this URL. Please enter password to continue.
                .form-box
                    label(for="password") Password
                    input#password.inputtext(type="password" name="password" required="")
                
                input.btn.btn--cta(type="submit" value="Submit")
        else
            a.url__redirect.btn.btn--cta(href=`${url.orgUrl}`) Redirect
